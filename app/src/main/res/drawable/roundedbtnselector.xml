<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <!--<stroke-->
                        <!--android:height="1.0dip"-->
                        <!--android:width="1.0dip"-->
                        <!--android:color="@color/colorAccent" />-->

                    <solid android:color="#ffffff"
                        />
                    <corners
                        android:bottomLeftRadius="12.0dip"
                        android:bottomRightRadius="12.0dip"
                        android:radius="12.0dip"
                        android:topLeftRadius="12.0dip"
                        android:topRightRadius="12.0dip" />
                </shape>

            </item>
            <item  android:right="5dp" android:top="5dp" android:bottom="5dp" android:left="5dp">
            <shape android:shape="oval">
                <stroke
                    android:height="3.0dip"
                    android:width="3.0dip"
                    android:color="@color/colorAccent" />

                <solid android:color="@color/colorAccent"
                    />
                <corners
                    android:bottomLeftRadius="12.0dip"
                    android:bottomRightRadius="12.0dip"
                    android:radius="12.0dip"
                    android:topLeftRadius="12.0dip"
                    android:topRightRadius="12.0dip" />
            </shape>
            </item>

        </layer-list>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="1000dp" />
            <solid android:color="@color/colorPrimary" />
            <stroke
                android:width="2dip"
                android:color="#fffffc" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>