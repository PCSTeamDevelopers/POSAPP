<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jo.com.pcstores.rpos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/custom"
        android:name=".pos.Classes.PCStoresPOS">
        <activity
            android:name=".pos.Activities.LoginActivity"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".pos.Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pos.Activities.NavMainActivity"
            android:label="@string/title_activity_nav_main"
            android:screenOrientation="landscape"
            android:theme="@style/custom.NoActionBar">

        </activity>
        <activity android:name=".pos.Activities.CloseCashActivity" />
    </application>

</manifest>